extends ../layouts/application.pug

block header
  = t('layouts.application.createTask')

block content
  +formFor()(action=route('tasks') method='post')
    +input(task, 'name', errors)(type="text")
    +textarea(task, 'description', errors)
    +select(task, 'statusId', errors, statuses)
    +select(task, 'executorId', errors, users)
    +submit(task)(value=t('views.tasks.new.create'))